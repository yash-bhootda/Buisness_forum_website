<div class="px-4 py-3 my-2 text-center">
    <h1 class="display-5 fw-bold">Share Your Business</h1>
    <div class="col-lg-7 mx-auto">
        <p class="lead">Share your wonderful company with tens of thousands of clients all around the world. To get
            started, fill out our form.</p>
    </div>
</div>
<div class="row justify-content-center">

    <% if(infoSubmitObj != '') { %>
      <div class="col-8 alert alert-success" role="alert">
        <%= infoSubmitObj %>
      </div>
    <% } %>
  
    <% if(infoErrorsObj != '') { %>
      <div class="col-8 alert alert-danger" role="alert">
        <%= infoErrorsObj[0].message %>
      </div>
    <% } %>

<div class="yrb">
<div class="col-8">

    <form action="/submit-work" enctype="multipart/form-data" method="POST" >

        <div class="row g-3">

            <div class="col-13">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" id="email" class="form-control">
            </div>

            <div class="col-13">
                <label for="name" class="form-label">Business Name</label>
                <input type="text" name="name" id="name" class="form-control" >
            </div>

            <div class="col-13">
                <label for="description" class="form-label">Description</label>
                <textarea name="description" id="description" class="form-control" cols="30" rows="4"></textarea>
            </div>

            <div class="col-13">
                <label for="name" class="form-label">Phone Number</label><br>
                <input type="text" name="phoneno" id="phoneno" class="form-control" >
            </div>

            <div class="col-12">
                <label for="category">Select Category</label>
                <select class="form-select form-control" name="category" aria-label="Category">
                    <option selected>Select Category</option>
                    <option value="Fitness">Fitness</option>
                    <option value="Dance">Dance</option>
                    <option value="Electronics">Electronics</option>
                    <option value="Health & Household">Health & Household</option>
                    <option value="Clothing">Clothing</option>
                </select>
            </div>

            <div class="col-13">
                <label for="image">Company Logo</label>
                <input type="file" class="form-control" name="image" accept="image/*">
            </div>

            <div class="col-13">
                <button type="submit" class="btn btn-primary">Submit Business Form</button>
            </div>

        </div>

    </form>

</div>
</div>
